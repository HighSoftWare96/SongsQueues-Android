<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:background="@drawable/list_item_background"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/event_name_placeholder"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:lines="1"
            android:maxLines="1"
            android:padding="7dp"
            android:paddingStart="7dp"
            android:singleLine="true"
            android:text="Event name"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/edit_event_action"
            style="@android:style/Widget.DeviceDefault.ImageButton"
            android:layout_width="0dp"
            android:layout_height="37dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_ripple"
            android:padding="4dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/edit_icon_dark" />

        <ImageButton
            android:id="@+id/notification_event_action"
            style="@android:style/Widget.DeviceDefault.ImageButton"
            android:layout_width="0dp"
            android:layout_height="37dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_ripple"
            android:padding="4dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/notification_icon_dark" />


        <ImageButton
            android:id="@+id/delete_event_action"
            style="@android:style/Widget.DeviceDefault.ImageButton"
            android:layout_width="0dp"
            android:layout_height="37dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_ripple_red"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:tint="@android:color/holo_red_dark"
            app:srcCompat="@drawable/delete_icon" />


    </LinearLayout>

    <TextView
        android:id="@+id/event_date_placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:paddingStart="11dp"
        android:text="23/07/2018"
        android:textColor="@android:color/black" />

</LinearLayout>
