<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/list_item_background"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    tools:context="com.highsoftware96.songsqueues.fragments.songlineups.SongLineupsFragment">


    <ImageView
        android:id="@+id/preview_image_placeholder"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/template_test" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorAccent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <ImageButton
            android:id="@+id/list_item_dots_button_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:background="@android:color/white"
            android:padding="7dp"
            android:paddingTop="10dp"
            app:srcCompat="@drawable/ic_action_more_vert" />

        <TextView
            android:id="@+id/lineup_title_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLength="40"
            android:maxLines="1"
            android:padding="5dp"
            android:text="Lineup Title"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/lineup_title_placeholder"
            android:layout_below="@+id/lineup_title_placeholder"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="2dp"
            android:text="@string/date_creation_list"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/last_modified_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lineup_title_placeholder"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/textView4"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="2dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/lineup_title_placeholder"
            android:layout_below="@+id/textView4"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="2dp"
            android:text="@string/description_list"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/textView5"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="2dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/lineup_title_placeholder"
            android:layout_below="@+id/textView5"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="2dp"
            android:text="@string/songs_list"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/songs_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/textView6"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="2dp" />

        <ImageView
            android:id="@+id/item_favourite_item"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/list_item_dots_button_menu"
            android:layout_marginStart="-10dp"
            android:layout_toEndOf="@+id/lineup_title_placeholder"
            android:src="@drawable/favourite_full_icon"
            android:visibility="invisible" />

    </RelativeLayout>

</LinearLayout>