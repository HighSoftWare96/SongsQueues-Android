<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:background="@drawable/list_item_background"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/preview_image_placeholder"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/template_test" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <TextView
            android:id="@+id/lineup_title_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLength="40"
            android:maxLines="1"
            android:padding="5dp"
            android:text="Lineup Title"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/lineup_title_placeholder"
            android:layout_below="@+id/lineup_title_placeholder"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="2dp"
            android:text="@string/date_creation_list"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/last_modified_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lineup_title_placeholder"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/textView4"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="2dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/lineup_title_placeholder"
            android:layout_below="@+id/textView4"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="2dp"
            android:text="@string/description_list"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/textView5"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="2dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/lineup_title_placeholder"
            android:layout_below="@+id/textView5"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="2dp"
            android:text="@string/songs_list"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/songs_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/textView6"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="2dp" />

    </RelativeLayout>

</LinearLayout>